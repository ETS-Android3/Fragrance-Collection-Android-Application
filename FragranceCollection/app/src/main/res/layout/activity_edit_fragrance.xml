<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditFragranceActivity"
    android:background="@color/colorBackground"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <ScrollView
        android:id="@+id/editFragranceScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editFragranceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/edit_fragrance"
                android:textSize="40sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editFragranceNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="48dp"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/editFragrancePerfumerEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="48dp"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/editFragranceReleaseYearEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="number"
                android:maxLines="1"
                android:minHeight="48dp"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/editFragranceNotesEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="48dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/editFragranceChooseImageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/choose_fragrance_image" />

            <ImageButton
                android:id="@+id/editFragranceChooseImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_image_24" />

            <Button
                android:id="@+id/editFragranceButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/colorPrimary"
                android:text="@string/edit_fragrance" />

            <ImageView
                android:id="@+id/editFragranceChosenImageView"
                android:layout_width="300dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:alpha="0"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>